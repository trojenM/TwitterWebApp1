@using Microsoft.AspNetCore.Identity
@using TwitterWebApp1.Data
@inject UserManager<AppUser> userManager

<!-- Sidebar Start -->
<div class="col-3 vh-100">
  <div class="sidebar ms-5 h-100 border-end">
    <i class="fa-solid fa-5 fa-2x p-4">
      <i class="fa-solid fa-5"></i>
    </i>
    <nav>
      <a asp-controller="Home" asp-action="Index" class="text-decoration-none text-dark">
        <div class="d-flex">
          <div class="d-inline-flex sidebar-option active">
            <i class="fa-regular fa-house fa-2x p-3"></i>
            <div class="my-auto pe-5 d-none d-lg-block">
              <span class="m-0">Home</span>
            </div>
          </div>
        </div>
      </a>
      <a href="#" class="text-decoration-none text-dark">
        <div class="d-flex">
          <div class="d-inline-flex sidebar-option">
            <i class="fa-solid fa-magnifying-glass fa-2x p-3"></i>
            <div class="my-auto pe-5 d-none d-lg-block">
              <span class="m-0">Explore</span>
            </div>
          </div>
        </div>
      </a>
      <a href="#" class="text-decoration-none text-dark">
        <div class="d-flex">
          <div class="d-inline-flex sidebar-option">
            <i class="fa-solid fa-bell fa-2x p-3"></i>
            <div class="my-auto pe-5 d-none d-lg-block">
              <span class="m-0">Notifications</span>
            </div>
          </div>
        </div>
      </a>
      <a href="#" class="text-decoration-none text-dark">
        <div class="d-flex">
          <div class="d-inline-flex sidebar-option">
            <i class="fa-solid fa-envelope fa-2x p-3"></i>
            <div class="my-auto pe-5 d-none d-lg-block">
              <span class="m-0">Messages</span>
            </div>
          </div>
        </div>
      </a>
      <a asp-controller="Bookmark" asp-action="Index" class="text-decoration-none text-dark">
        <div class="d-flex">
          <div class="d-inline-flex sidebar-option">
            <i class="fa-solid fa-bookmark fa-2x p-3"></i>
            <div class="my-auto pe-5 d-none d-lg-block">
              <span class="m-0">Bookmarks</span>
            </div>
          </div>
        </div>
      </a>
      <a asp-controller="Profile" asp-action="Index" asp-route-username=@userManager.GetUserAsync(User).Result?.UserName
        class="text-decoration-none text-dark">
        <div class="d-flex">
          <div class="d-inline-flex sidebar-option">
            <i class="fa-solid fa-user fa-2x p-3"></i>
            <div class="my-auto pe-5 d-none d-lg-block">
              <span class="m-0">Profile</span>
            </div>
          </div>
        </div>
      </a>
    </nav>
    <div class="siderbar-post-button mt-4">
      <button type="button" class="btn btn-lg btn-primary rounded-pill w-75" data-bs-dismiss="modal"
        data-bs-target="#post-box-modal">
        <span class="fw-bold my-4">Post</span>
      </button>
    </div>
    <div class="mt-3">
      <partial name="_LoginNavbarPartial" />
    </div>
  </div>
</div>
<!-- Sidebar End -->